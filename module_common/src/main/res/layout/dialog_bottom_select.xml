<?xml version="1.0" encoding="utf-8"?>
<com.xzq.module_base.views.DividerLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_dialog_bottom"
    android:divider="@drawable/divider_common_line"
    android:orientation="vertical"
    android:showDividers="middle">

    <TextView
        android:id="@+id/dbs_tv_title"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:gravity="center"
        android:textColor="@color/color_main"
        android:textSize="14pt"
        tools:text="标题" />

    <TextView
        android:id="@+id/dbs_btn_1"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:background="@drawable/bg_common_press"
        android:gravity="center"
        android:textColor="@color/color_main"
        android:textSize="14pt"
        tools:text="拍照" />

    <TextView
        android:id="@+id/dbs_btn_2"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:background="@drawable/bg_common_press"
        android:gravity="center"
        android:textColor="@color/color_main"
        android:textSize="14pt"
        tools:text="从相册选择" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8pt"
        android:background="@color/color_common_bg" />

    <TextView
        android:id="@+id/dbs_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:background="@drawable/bg_common_press"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_888888"
        android:textSize="14pt" />

</com.xzq.module_base.views.DividerLinearLayout>