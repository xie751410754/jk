<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAF8F5"
    android:orientation="vertical">




    <LinearLayout
        android:layout_marginTop="8pt"
        android:layout_marginStart="8pt"
        android:layout_marginEnd="8pt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:background="@drawable/bg_stroke_search"
            android:layout_width="match_parent"
            android:layout_height="44pt"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28pt"
                android:layout_marginStart="15pt"
                android:layout_marginEnd="15pt"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <com.xzq.module_base.views.ClearEditText
                        android:id="@+id/et_search"
                        android:layout_width="0pt"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20pt"
                        android:layout_marginEnd="20pt"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入用户名搜索"
                        android:textColorHint="@color/color_bbbbbb"
                        android:imeOptions="actionSearch"
                        android:singleLine="true"
                        android:textSize="12pt" />

                    <ImageView
                        android:id="@+id/img_search"
                        android:layout_width="14pt"
                        android:layout_height="14pt"
                        android:layout_marginEnd="12pt"
                        android:src="@drawable/search" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:background="@drawable/bg_ll"
            android:layout_marginTop="10pt"
            android:id="@id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>
