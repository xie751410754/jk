<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8F5"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">




    <LinearLayout
        android:layout_marginTop="5pt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/vpn_logout"
            android:layout_width="match_parent"
            android:layout_height="44pt"
            android:layout_marginLeft="15pt"
            android:layout_marginRight="15pt"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="VPN账号切换"
                android:textColor="#222222"
                android:textSize="14pt" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8pt"
                tools:text="数据可视化测试"
                android:textColor="#BBBBBB"
                android:textSize="14pt" />

            <ImageView
                android:layout_width="7pt"
                android:layout_height="12pt"
                android:src="@drawable/icon_more_arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8pt"
            android:background="#F2F4FA" />
        <LinearLayout
            android:id="@+id/ll_accountSecurity"
            android:layout_width="match_parent"
            android:layout_height="44pt"
            android:layout_marginLeft="16pt"
            android:layout_marginRight="15pt"
            android:gravity="center_vertical"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/versionBuild"
                android:layout_marginRight="10pt"
                android:gravity="right"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16pt"
                android:layout_weight="1"
                android:text="版本号"
                android:textColor="#222222"
                android:textSize="14pt" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F2F4FA" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_button_yellow"
            android:text="退出登录"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </LinearLayout>



</LinearLayout>
