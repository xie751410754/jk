<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xzq.module_base.views.NoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_weight="1" />

    <com.jpeng.jptabbar.JPTabBar
        android:id="@+id/tabbar"
        android:layout_width="match_parent"
        android:layout_height="48pt"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_layer_top_line"
        android:paddingLeft="10pt"
        android:paddingRight="10pt"
        jp:TabAnimate="None"
        jp:TabIconSize="20pt"
        jp:TabMargin="6pt"
        jp:TabMiddleBottomDis="3pt"
        jp:TabMiddleHMargin="70pt"
        jp:TabNormalColor="@color/main_tab_nor"
        jp:TabSelectColor="@color/color_d5aa6d"
        jp:TabTextSize="11pt" />

</LinearLayout>